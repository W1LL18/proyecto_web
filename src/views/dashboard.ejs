<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seleccionar Servicio y Técnico</title>
    <!-- Enlace a Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Contenedor principal -->
    <div class="container mt-5">
        <!-- Título -->
        <h1 class="text-center mb-4">Selecciona un Servicio y un Técnico</h1>

        <!-- Formulario de solicitud de servicio -->
        <form action="/solicitar-servicio" method="POST" class="bg-light p-4 rounded shadow">
            <!-- Selección de servicio -->
            <div class="mb-3">
                <label for="service" class="form-label">Servicio:</label>
                <select class="form-select" name="service" id="service">
                    <% services.forEach(service => { %>
                        <option value="<%= service.id %>"><%= service.name %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Selección de técnico -->
            <div class="mb-3">
                <label for="technician" class="form-label">Técnico:</label>
                <select class="form-select" name="technician" id="technician">
                    <% technicians.forEach(technician => { %>
                        <option value="<%= technician.id %>"><%= technician.name %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Campo de dirección -->
            <div class="mb-3">
                <label for="address" class="form-label">Dirección:</label>
                <input type="text" class="form-control" name="address" id="address" required placeholder="Ingresa tu dirección">
            </div>

            <!-- Botón de enviar -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">Solicitar Servicio</button>
            </div>
        </form>

        <!-- Enlaces adicionales -->
        <div class="mt-4 text-center">
            <a href="/requests" class="btn btn-outline-primary me-2">Ver Mis Solicitudes</a>
            <a href="/logout" class="btn btn-outline-danger">Cerrar sesión</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
