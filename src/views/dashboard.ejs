<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solicitar Servicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Barra de navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Plataforma de Reparaciones</a>
        </div>
    </nav>

    <!-- Contenedor principal -->
    <div class="container mt-5">
        <!-- Título -->
        <h1 class="text-center mb-4">Selecciona un Servicio y un Técnico</h1>

        <!-- Formulario de solicitud de servicio -->
        <form action="/solicitar-servicio" method="POST" class="bg-light p-4 rounded shadow needs-validation" novalidate>
            <!-- Selección de servicio -->
            <div class="mb-3">
                <label for="service" class="form-label">Servicio:</label>
                <select class="form-select" name="service" id="service" required>
                    <option value="" disabled selected>Selecciona un servicio</option>
                    <% services.forEach(service => { %>
                        <option value="<%= service.id %>"><%= service.name %></option>
                    <% }) %>
                </select>
                <div class="invalid-feedback">Por favor, selecciona un servicio.</div>
            </div>

            <!-- Selección de técnico -->
            <div class="mb-3">
                <label for="technician" class="form-label">Técnico:</label>
                <select class="form-select" name="technician" id="technician" required>
                    <option value="" disabled selected>Selecciona un técnico</option>
                    <% technicians.forEach(technician => { %>
                        <option value="<%= technician.id %>"><%= technician.name %></option>
                    <% }) %>
                </select>
                <div class="invalid-feedback">Por favor, selecciona un técnico.</div>
            </div>

            <!-- Campo de dirección -->
            <div class="mb-3">
                <label for="address" class="form-label">Dirección:</label>
                <input type="text" class="form-control" name="address" id="address" required placeholder="Ingresa tu dirección">
                <div class="invalid-feedback">Por favor, ingresa tu dirección.</div>
            </div>

            <!-- Nuevo Campo: Teléfono -->
            <div class="mb-3">
                <label for="phone" class="form-label">Teléfono de Contacto:</label>
                <input type="tel" class="form-control" name="phone" id="phone" required placeholder="Ingresa tu número de teléfono">
                <div class="invalid-feedback">Por favor, ingresa tu número de teléfono.</div>
            </div>

            <!-- Nuevo Campo: Descripción del Servicio -->
            <div class="mb-3">
                <label for="description" class="form-label">Descripción del Servicio:</label>
                <textarea class="form-control" name="description" id="description" rows="3" required placeholder="Describe detalladamente el problema o servicio que necesitas"></textarea>
                <div class="invalid-feedback">Por favor, describe el servicio requerido.</div>
            </div>

            <!-- Nuevo Campo: Fecha Preferida -->
            <div class="mb-3">
                <label for="date" class="form-label">Fecha Preferida:</label>
                <input type="date" class="form-control" name="date" id="date" required>
                <div class="invalid-feedback">Por favor, selecciona una fecha preferida.</div>
            </div>

            <!-- Nuevo Campo: Hora Preferida -->
            <div class="mb-3">
                <label for="time" class="form-label">Hora Preferida:</label>
                <input type="time" class="form-control" name="time" id="time" required>
                <div class="invalid-feedback">Por favor, selecciona una hora preferida.</div>
            </div>

            <!-- Nuevo Campo: Urgencia -->
            <div class="mb-3">
                <label for="urgency" class="form-label">Nivel de Urgencia:</label>
                <select class="form-select" name="urgency" id="urgency" required>
                    <option value="" disabled selected>Selecciona el nivel de urgencia</option>
                    <option value="baja">Baja</option>
                    <option value="media">Media</option>
                    <option value="alta">Alta</option>
                </select>
                <div class="invalid-feedback">Por favor, selecciona el nivel de urgencia.</div>
            </div>

            <!-- Botón de enviar -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">Solicitar Servicio</button>
            </div>
        </form>

        <!-- Enlaces adicionales -->
        <div class="mt-4 text-center">
            <a href="/requests" class="btn btn-outline-primary me-2">Ver Mis Solicitudes</a>
            <a href="/logout" class="btn btn-outline-danger">Cerrar sesión</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script de Validación de Formulario -->
    <script>
        // Validación de formulario en tiempo real
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()

        // Manejo de selección dinámica de técnicos (suponiendo que haya un filtrado por servicio)
        document.getElementById('service').addEventListener('change', function() {
            const selectedService = this.value;
            // Aquí se puede agregar lógica para filtrar técnicos basados en el servicio seleccionado
            console.log("Servicio seleccionado:", selectedService);
        });
    </script>
</body>
</html>
